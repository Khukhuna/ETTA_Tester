<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:id="@+id/details">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/temperature"
                android:gravity="end"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginEnd="20dp"
                android:id="@+id/temp_hint"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/temp_hint"
                android:layout_marginTop="20dp"
                android:text="@string/humidity"
                android:id="@+id/humidity_hint"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/humidity_hint"
                android:layout_marginTop="20dp"
                android:text="@string/water_level"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                />




        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50Â°"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:id="@+id/temperature"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/temperature"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:text="30%"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:id="@+id/humidity"
                android:layout_marginStart="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/humidity"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:text="25%"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:id="@+id/water_level"
                android:paddingLeft="20dp"/>

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/details"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:paddingTop="20dp"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:id="@+id/mode_intro"
        android:text="@string/mode"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mode_intro"
        android:layout_marginTop="20dp"
        android:id="@+id/mode"
        >


    </android.support.v7.widget.RecyclerView>

</RelativeLayout>